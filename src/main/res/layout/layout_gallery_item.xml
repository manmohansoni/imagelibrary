<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gallery_item_width"
    android:layout_margin="5dp"
    android:background="@color/gray"
    android:elevation="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@id/imgGalleryItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gallery_item_height"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/layoutStripColor"
        android:gravity="center_vertical"
        android:padding="4dp">

        <ImageView
            android:id="@id/imgFolderIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_folder_white_24dp" />

        <TextView
            android:id="@id/txtGalleryItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/txtCount"
            android:layout_toRightOf="@id/imgFolderIcon"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="testasdfas asdfsadsdf sf sadf "
            android:textColor="@color/white" />

        <TextView
            android:id="@id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:singleLine="true"
            android:text="12"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>