<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/first_image">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
            <stroke
                android:width="2px"
                android:color="#999999" />
        </shape>
    </item>
    <item
        android:id="@+id/second_image"
        android:left="10dp"
        android:top="10dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid android:color="#AAAAAA" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <stroke
                android:width="1px"
                android:color="@color/white" />
        </shape>
    </item>

</layer-list>

